<:def params="String title | Map[String, Object] menuMap | String contentPath | String content">
	<html>
		<head>
			<title>Title: #{title.toUpperCase()} ***</title>
			<meta name="title" value="#{title}" />
			<link href='#{u:url("rsc/styles.css")}'></link>
		</head>
		<body>
			<:include src="menu" model="menuMap" />
			<div id="main">
				<:include src="#{contentPath}" model="content" />
			</div>
			<:include src="#footer" />
			<script src="#{u:url('rsc/scripts.js')}"></script>
		</body>
	</html>
</:def>
<:def name="footer">
	<div class="footer">
		<div />
	</div>
</:def>